{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
      { "source": "/meeting", "destination": "/meeting.html" },
      { "source": "/meeting/**", "destination": "/meeting.html" },
      { "source": "/input", "destination": "/input.html" },
      { "source": "/input/**", "destination": "/input.html" },
      { "source": "/front", "destination": "/front.html" },
      { "source": "/front/**", "destination": "/front.html" },
      { "source": "/report", "destination": "/report.html" },
      { "source": "/report/**", "destination": "/report.html" },
      { "source": "/", "destination": "/index.html" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
